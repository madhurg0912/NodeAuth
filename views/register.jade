extends layout

block content
  .row
    .col-xs-10.col-sm-10.col-md-6.col-lg-6
      h1 Register
      p Please register using the form below
      if errors
        table.table
          each error, i in errors
            tr.warning
              td #{error.msg}
      form(method='POST', action='/users/register', 
      enctype='multipart/form-data')
        .form-group
          label Name
          input.form-control(name='name', id='name', type='text', 
          placeholder='Enter name', value=(name = '' ? '' : name))
        .form-group
          label Email
          input.form-control(name='email', id='email', type='email', 
          placeholder='Enter email', value=(email = '' ? '' : email))
        .form-group
          label Username
          input.form-control(name='username', id='username', type='text', 
          placeholder='Enter username', value=(username = '' ? '' : username))
        .form-group
          label Password
          input.form-control(name='password', id='password', type='password', 
          placeholder='Enter password')
        .form-group
          label Password Confirmation
          input.form-control(name='password2', id='password2', type='password', 
          placeholder='Confirm password')
        .form-group
          label Profile Image
          input.form-control(name='profileimage', id='profileimage', 
          type='file')
        input.btn.btn-default(name='submit', id='submit', type='submit', 
        value='Register')
